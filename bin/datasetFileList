#!/bin/bash
# Exact copy of mu2eDatasetFileList functionality
# Provides the same interface and behavior as the original Perl script

# Get the directory where this script is located
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Run the Python script with all arguments passed through
exec python3 "$SCRIPT_DIR/../utils/datasetFileList.py" "$@"