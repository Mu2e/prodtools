#!/bin/bash
#
# SAM Dataset Parentage Chain Tracker
#
# Usage:
#   samchain <dataset_name>
#   samchain <file_name>
#   samchain --files <dataset_name>
#
# Examples:
#   samchain sim.mu2e.TargetStops.MDC2025ac.art
#   samchain sim.mu2e.TargetStops.MDC2025ac.001430_00004022.art
#   samchain --files sim.mu2e.TargetStops.MDC2025ac.art
#

# Get the directory of this script
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PRODTOOLS_DIR="$(dirname "$SCRIPT_DIR")"

# Add prodtools to Python path
export PYTHONPATH="$PRODTOOLS_DIR:$PYTHONPATH"

# Run the Python script
exec python3 "$PRODTOOLS_DIR/utils/famtree.py" "$@"


